<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary_light"
            android:padding="8dp">

            <TextView
                android:id="@+id/textViewItemMeetingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha: "
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/textViewItemMeetingDateOfControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx/xx/xxxx"
                app:layout_constraintHorizontal_bias=".02"
                app:layout_constraintTop_toTopOf="@id/textViewItemMeetingDate"
                app:layout_constraintBottom_toBottomOf="@id/textViewItemMeetingDate"
                app:layout_constraintStart_toEndOf="@id/textViewItemMeetingDate"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemMeetingDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MÃ©dico: "
                android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@id/textViewItemMeetingDate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/textViewItemMeetingDate"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemMeetingDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxxxxxx"
                app:layout_constraintHorizontal_bias=".02"
                app:layout_constraintTop_toTopOf="@id/textViewItemMeetingDoctor"
                app:layout_constraintBottom_toBottomOf="@id/textViewItemMeetingDoctor"
                app:layout_constraintStart_toEndOf="@id/textViewItemMeetingDoctor"
                app:layout_constraintEnd_toEndOf="parent"/>



            <TextView
                android:id="@+id/textViewItemMeetingNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notas:"
                android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@id/textViewItemMeetingDoctor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemMeetingNotesName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="xxxxxxxxxxxxxxxxxx\nxxxxxxxxxxxxxx\nxxxxxxxxxxxxxxxxxx\nxxxxxxxxxxx\nxxxxxxxxxxxxxxx"
                android:inputType="textMultiLine"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias=".02"
                app:layout_constraintTop_toTopOf="@id/textViewItemMeetingNotes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/textViewItemMeetingNotes"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemMeetingAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxxxxxxxx"
                android:layout_marginTop="20dp"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintTop_toBottomOf="@id/textViewItemMeetingNotesName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewMeetingAvatar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_user"
                app:layout_constraintHorizontal_bias=".98"
                app:layout_constraintTop_toTopOf="@id/textViewItemMeetingAuthor"
                app:layout_constraintBottom_toBottomOf="@id/textViewItemMeetingAuthor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textViewItemMeetingAuthor"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>