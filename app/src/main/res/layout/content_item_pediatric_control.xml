<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_light"
            android:padding="8dp">

            <TextView
                android:id="@+id/textViewItemControlDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha: "
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/textViewItemControlDateOfControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx/xx/xxxx"
                app:layout_constraintHorizontal_bias=".02"
                app:layout_constraintTop_toTopOf="@id/textViewItemControlDate"
                app:layout_constraintStart_toEndOf="@id/textViewItemControlDate"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemControlAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x meses"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toTopOf="@id/textViewItemControlDate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemControlDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Médico: "
                android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@id/textViewItemControlDate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/textViewItemControlDate"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemControlDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxxxxxx"
                app:layout_constraintHorizontal_bias=".02"
                app:layout_constraintTop_toTopOf="@id/textViewItemControlDoctor"
                app:layout_constraintStart_toEndOf="@id/textViewItemControlDoctor"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemControlSpecialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Especialidad: "
                android:layout_marginTop="4dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@id/textViewItemControlDoctor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/textViewItemControlDoctor"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemDoctorSpecialtyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxxxxxx"
                app:layout_constraintHorizontal_bias=".02"
                app:layout_constraintTop_toTopOf="@id/textViewItemControlSpecialty"
                app:layout_constraintStart_toEndOf="@id/textViewItemControlSpecialty"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemControlWeigth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peso:"
                android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@id/textViewItemControlSpecialty"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemControlWeigthName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxxx"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias=".02"
                app:layout_constraintTop_toTopOf="@id/textViewItemControlWeigth"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/textViewItemControlWeigth"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemControlHeigth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Altura: "
                android:layout_marginTop="4dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@id/textViewItemControlWeigth"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/textViewItemControlWeigth"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemControlHeigthName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxxxxxx"
                app:layout_constraintHorizontal_bias=".02"
                app:layout_constraintTop_toTopOf="@id/textViewItemControlHeigth"
                app:layout_constraintStart_toEndOf="@id/textViewItemControlHeigth"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemControlObservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observaciones:"
                android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@id/textViewItemControlHeigth"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemControlObservationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxxxxxxxxxxxxxx\nxxxxxxxxxxxxxx\nxxxxxxxxxxxxxxxxxx\nxxxxxxxxxxx\nxxxxxxxxxxxxxxx"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias=".02"
                app:layout_constraintTop_toTopOf="@id/textViewItemControlObservation"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/textViewItemControlObservation"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemControlNextControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Próximo Control: "
                android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@id/textViewItemControlObservationName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/textViewItemControlWeigth"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemControlNextControlName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx/xx/xxxx"
                app:layout_constraintHorizontal_bias=".02"
                app:layout_constraintTop_toTopOf="@id/textViewItemControlNextControl"
                app:layout_constraintStart_toEndOf="@id/textViewItemControlNextControl"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemControlNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notas:"
                android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@id/textViewItemControlNextControl"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemControlNotesName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxxxxxxxxxxxxxx\nxxxxxxxxxxxxxx\nxxxxxxxxxxxxxxxxxx\nxxxxxxxxxxx\nxxxxxxxxxxxxxxx"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias=".02"
                app:layout_constraintTop_toTopOf="@id/textViewItemControlNotes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/textViewItemControlNotes"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewItemControlAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxxxxxxxx"
                android:layout_marginTop="20dp"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintTop_toBottomOf="@id/textViewItemControlNotesName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_user"
                app:layout_constraintHorizontal_bias=".98"
                app:layout_constraintTop_toTopOf="@id/textViewItemControlAuthor"
                app:layout_constraintBottom_toBottomOf="@id/textViewItemControlAuthor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textViewItemControlAuthor"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>